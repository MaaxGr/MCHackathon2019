<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image Buttons: Takeoff, Emergency, Land-->
        <ImageButton
            android:id="@+id/btn_takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_file_upload_black_24dp"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_emergency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/attentionRed"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_warning_black_24dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_land"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:src="@drawable/ic_file_download_black_24dp"
                tools:ignore="ContentDescription" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/vw_camera_stream"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        app:layout_constraintTop_toBottomOf="@id/ll_top_bar">

        <VideoView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>


    <android.support.constraint.ConstraintLayout
        app:layout_constraintTop_toBottomOf="@id/ll_top_bar"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal">

    <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:JV_backgroundColor="#88333333"
        custom:JV_borderColor="#88111111"
        custom:JV_borderWidth="@dimen/joystick_border_width"
        custom:JV_buttonColor="@color/colorPrimaryDark"
        custom:JV_buttonSizeRatio="15%"
        custom:JV_fixedCenter="true"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintLeft_toLeftOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />

    <io.github.controlwear.virtual.joystick.android.JoystickView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        custom:JV_backgroundColor="#88333333"
        custom:JV_borderColor="#88111111"
        custom:JV_borderWidth="@dimen/joystick_border_width"
        custom:JV_buttonColor="@color/colorPrimaryDark"
        custom:JV_buttonSizeRatio="15%"
        custom:JV_fixedCenter="true"
        custom:layout_constraintBottom_toBottomOf="parent"
        custom:layout_constraintRight_toRightOf="parent"
        custom:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <!--Battery, Speed, Time-->
        <TextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Battery"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Speed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>