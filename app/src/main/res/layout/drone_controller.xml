<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent">
        <!--Image Buttons: Takeoff, Emergency, Land-->
        <ImageButton
            android:id="@+id/btn_takeoff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:src="@drawable/ic_file_upload_black_24dp"
            tools:ignore="ContentDescription"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>

        <ImageButton
            android:id="@+id/btn_emergency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/attentionRed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_warning_black_24dp"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:id="@+id/btn_land"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/grey"
            android:src="@drawable/ic_file_download_black_24dp"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@id/ll_bottom_bar"
        app:layout_constraintTop_toTopOf="@id/ll_top_bar">

        <io.github.controlwear.virtual.joystick.android.JoystickView xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            custom:JV_backgroundColor="#333333"
            custom:JV_borderColor="#111111"
            custom:JV_borderWidth="4dp"
            custom:JV_buttonColor="@color/colorPrimaryDark"
            custom:JV_buttonSizeRatio="15%"
            custom:JV_fixedCenter="false" />
        <io.github.controlwear.virtual.joystick.android.JoystickView
            android:layout_gravity="right|center"
            xmlns:custom="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            custom:JV_buttonColor="@color/colorPrimaryDark"
            custom:JV_buttonSizeRatio="15%"
            custom:JV_borderColor="#111111"
            custom:JV_backgroundColor="#333333"
            custom:JV_borderWidth="4dp"
            custom:JV_fixedCenter="false"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <!--Battery, Speed, Time-->
        <TextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Battery"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:hint="Speed"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Time"
            android:textColor="@color/light_text"
            android:textColorHint="@color/light_text" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>